<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/photo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        />


    <TextView
        android:id="@+id/textName"
        android:text="Имя: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="120dp"
        />

    <TextView
        android:id="@+id/contName"
        android:text="TextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="190dp"
        />

    <TextView
    android:id="@+id/textLastname"
    android:text="Фамилия: "
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="120dp"
    android:layout_below="@id/textName"
    />

    <TextView
        android:id="@+id/contLastname"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="190dp"
        android:layout_below="@id/contName"
        />
    <TextView
        android:id="@+id/textTepephone"
        android:text="Телефон: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@id/textLastname"
        />
    <TextView
        android:id="@+id/contTelef"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="190dp"
        android:layout_below="@id/contLastname" />

</RelativeLayout>